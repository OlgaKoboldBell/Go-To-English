        <Button x:Name="bt14" Content="Вправа 1" HorizontalAlignment="Left" Height="24" Margin="25,290,0,0" VerticalAlignment="Top" Width="92" Click="bt14_Click" Visibility ="Hidden"  />
        <Button x:Name="bt15" Content="Вправа 2" HorizontalAlignment="Left" Height="24" Margin="25,330,0,0" VerticalAlignment="Top" Width="92" Click="bt15_Click"  Visibility ="Hidden" />
        <Button x:Name="bt16" Content="Вправа 1" HorizontalAlignment="Left" Height="24" Margin="25,290,0,0" VerticalAlignment="Top" Width="92" Click="bt16_Click" Visibility ="Hidden" />
        <Button x:Name="bt17" Content="Вправа 2" HorizontalAlignment="Left" Height="24" Margin="25,330,0,0" VerticalAlignment="Top" Width="92" Click="bt17_Click"  Visibility ="Hidden" />

        <TextBox x:Name="tb2" HorizontalAlignment="Left" Height="345" Margin="120,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="595" ScrollViewer.CanContentScroll="True" Visibility ="Hidden" VerticalScrollBarVisibility="Visible" />
        <TextBox x:Name="tb3" HorizontalAlignment="Left" Height="35" Margin="130,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="385"  Visibility ="Hidden" />

        <Button x:Name="bt18" Content="На головну" HorizontalAlignment="Left" Height="24" Margin="1250,10,0,0" VerticalAlignment="Top" Width="92" Click="bt18_Click"  />
        <Button x:Name="bt19" Content="СЛОВА" HorizontalAlignment="Left" Height="24" Margin="1250,40,0,0" VerticalAlignment="Top" Width="92" Click="bt19_Click"   />

        <WrapPanel x:Name="wp1" Background="Beige" Height="200"  HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden">
            <StackPanel x:Name="sp1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility ="Hidden">
                <!-- First Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="dogImage" Source="/images/dog.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="dog" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="dogText" Text="Dog - собака" Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="dog" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Second Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="catImage" Source="/images/cat.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="cat" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="catText" Text="Cat - кот" Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="cat" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Third Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="houseImage" Source="/images/house.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="house" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="houseText" Text="House - дім" Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="house" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
                <!--4 Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="HistoryImage" Source="/images/History.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="History" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="HistoryText" Text="History - історія" Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="History" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!--5 Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="MathematicsImage" Source="/images/Mathematics.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="Mathematics" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="MathematicsText" Text="Mathematics - математика" Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="Mathematics" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!--6 Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="PhysicsImage" Source="/images/Physics.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="Physics" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="PhysicsText" Text="Physics - фізика " Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="Physics" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="5">
                    <Image Name="DrinkImage" Source="/images/Drink.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="Drink" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="DrinkText" Text="Drink - пити " Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="Drink" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!--7 Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="LunchImage" Source="/images/Lunch.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="Lunch" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="LunchText" Text="Lunch - обід " Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="Lunch" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

                <!--8 Image and TextBlock -->
                <StackPanel Margin="5">
                    <Image Name="SchoolImage" Source="/images/School.jpg" Width="150" Height="170" MouseLeftButtonDown="OnImageTapped" Tag="School" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="SchoolText" Text="School - школа " Margin="50" MouseLeftButtonDown="OnWordTapped" Tag="School" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>





        </WrapPanel>

        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="581*"/>
                    <ColumnDefinition Width="139*"/>
                </Grid.ColumnDefinitions>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,16,0,-416" Grid.ColumnSpan="2"/>

                <Button Content="About us" FontSize="21" HorizontalAlignment="Left" Click="About_Us_Click" Margin="178,10,0,0" VerticalAlignment="Top" Background="DeepSkyBlue" Height="49" Width="316" Foreground="#FFFFFCFC" FontWeight="Bold"/>
                <Button Content="Картинки"  FontSize="21" Click="Button_Click" HorizontalAlignment="Left" Margin="499,9,0,0" VerticalAlignment="Top" Background="DeepSkyBlue" Height="49" Width="374" RenderTransformOrigin="-1.609,3.228" Foreground="#FFEFEAEA" FontWeight="Bold"/>
                <Button Content="Exit" Click="Exit" HorizontalAlignment="Left" Margin="51,783,0,0" Background="#FFAB00FF" VerticalAlignment="Top" FontSize="24" Height="59" Width="227" Grid.Column="1" FontWeight="Bold"/>
                <Button Content="Task" Click="Task1" HorizontalAlignment="Left" Margin="898,10,0,0" VerticalAlignment="Top" Height="49" Width="274" Background="DeepSkyBlue" Foreground="#FFEFF5F1" FontSize="19" FontWeight="Bold" Grid.ColumnSpan="2"/>

            </Grid>
        </Grid>
        <Grid Margin="25,90,-25,-90">
            <Button Content="Show Words" Click="ShowWords_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="41" Width="115" Background="#FF84E416" FontSize="20" FontWeight="Bold" Margin="42,58,0,0"/>
            <Button Content="TAsk2"  Click="TAsk_2Ckil" HorizontalAlignment="Left" Margin="42,-14,0,0" VerticalAlignment="Top" Height="30" Width="115" FontSize="24" Background="#FFDA6868"/>
            <Button Content="TAsk3"  Click="TAsk_3Ckil" HorizontalAlignment="Left" Margin="42,21,0,0" VerticalAlignment="Top" Height="32" Width="115" FontSize="20" FontWeight="Bold" Background="#FFCADC27"/>
        </Grid>


    </Grid>

</Window>